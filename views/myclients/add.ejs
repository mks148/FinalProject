<% include ../partials/header.ejs %>


<main class="container">


<h1 class="coloredHeader"> Add Parents/Campers</h1>
<div class="row">
    <div class="col-md-12">
        <div class="alert alert-success">
            Add Parents Names separated by comma's.
        </div>
    </div>
</div>
<form method="post">
   <div class="form-group">
       <label for="campername" class="col-sm-2 control-label">Camper Name: </label>
       <input name="campername" id="campername" required  />
   </div>

   <div class="form-group">
       <label for="parentname" class="col-sm-2 control-label">Family Name: </label>
       <input name="parentname" id="parentname" required  />
   </div>

   <div class="form-group">
       <label for="campername2" class="col-sm-2 control-label">Parents Names: </label>
       <input name="campername2" id="campername2"  />
   </div>
   <div class="form-group">
       <label for="campername3" class="col-sm-2 control-label">Email: </label>
       <input name="campername3" id="campername3"   />
   </div>

   <div class="form-group">
       <label for="phone" class="col-sm-2 control-label">Phone: </label>
       <input name="phone" id="phone" type:"number"required/>
   </div>

   <div class="form-group">
       <label for="notes" class="col-lg-2 col-sm-2 control-label">Notes: </label>
       <input name="notes" id="notes"  required />
   </div>
   <div class="form-group">
       <label for="medical" class="col-sm-2 control-label">Medical notes: </label>
     <input name="medical" id="medical" required  />
   </div>
   <div class="form-group">
       <label for="code" class="col-sm-2 control-label" title="it needed for sign-in/out camper">Parent's Code: </label>
       <input name="code" id="code"  type="number" />
   </div>
   <button class="btn buttonPrime buttonPrimeHover">Save</button>


</form>

</main>

